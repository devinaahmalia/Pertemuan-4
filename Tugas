#include <iostream>

using namespace std;

int main ()
{

int a,b,c,d,e,f,pilih,hasil;



cout<<"Masukan angka pertama :" ;
cin>>a;
cout<<"Masukan angka kedua : ";
cin>>b;

cout<<"Operator\n";
cout<<"1. Penjumlahan\n2. Pengurangan\n3. Perkalian\n4. Pembagian\nMasukan operator diatas : ";
cin>>pilih;
if ( pilih == 1 )
 {
      c=a+b;
      cout << "Nilai Penjumlahan = " << c << endl;
      }
 if ( pilih == 2)
 {
      d=a-b;
      cout << "Nilai Pengurangna = " << d << endl;
      }
 if ( pilih == 3)
 {
      e=a*b;
      cout << "Nilai Perkalian = " << e << endl;
      }
 if ( pilih == 4 )
 {
      f=a/b;
      cout << "Nilai pembagian = " << f << endl;
      }




return 0;
}
